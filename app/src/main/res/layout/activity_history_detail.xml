<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="207dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ferrari_v9s" />

            <View
                android:id="@+id/anchor"
                android:layout_width="match_parent"
                android:layout_height="207dp"
                android:minHeight="207dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/anchor"
                android:id="@+id/historyTitle"
                android:textSize="22dp"
                android:text="A Different Aspect To Ferrari Cars In Europe"
                android:textColor="@color/primary_text"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:transitionName="historyTitle"
                />

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/historyTitle"
                android:id="@+id/cv"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/historyDetail"
                        android:layout_toRightOf="@+id/person_photo"
                        android:layout_alignParentTop="true"
                        android:textSize="16dp"
                        android:textColor="@color/secondary_text"
                        android:text="@string/short_paragraph"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dip"
                        android:background="@color/divider"
                        android:layout_marginBottom="10dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentLeft="true">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:id="@+id/photoContributer1"
                                android:src="@drawable/user4_36"
                                android:layout_marginRight="2dp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/likeCount"
                                android:textSize="12dp"
                                android:text="391"
                                />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/photoLike"
                                android:src="@drawable/like"
                                android:layout_marginRight="8dp"
                                />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>



            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/cv"
                android:id="@+id/cv2"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/historyDetail2"
                        android:layout_toRightOf="@+id/person_photo"
                        android:layout_alignParentTop="true"
                        android:textSize="16dp"
                        android:textColor="@color/secondary_text"
                        android:text="@string/short_paragraph"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dip"
                        android:background="@color/divider"
                        android:layout_marginBottom="10dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentLeft="true">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:id="@+id/photoContributer12"
                                android:src="@drawable/user2_36"
                                android:layout_marginRight="2dp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/likeCount2"
                                android:textSize="12dp"
                                android:text="391"
                                />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/photoLike2"
                                android:src="@drawable/like"
                                android:layout_marginRight="8dp"
                                />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>



            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/cv2"
                android:id="@+id/cv3"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/historyDetail22"
                        android:layout_toRightOf="@+id/person_photo"
                        android:layout_alignParentTop="true"
                        android:textSize="16dp"
                        android:textColor="@color/secondary_text"
                        android:text="@string/lipsum"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dip"
                        android:background="@color/divider"
                        android:layout_marginBottom="10dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentLeft="true">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:id="@+id/photoContributer123"
                                android:src="@drawable/user2_36"
                                android:layout_marginRight="2dp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/likeCount23"
                                android:textSize="12dp"
                                android:text="391"
                                />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/photoLike23"
                                android:src="@drawable/like"
                                android:layout_marginRight="8dp"
                                />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>



            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>

    <include layout="@layout/gradient_header" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
        app:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

</FrameLayout>