<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="8dp"
    android:id="@+id/cv"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            >

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/person_photo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/user4_36"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_name"
                android:layout_toRightOf="@+id/person_photo"
                android:layout_alignParentTop="true"
                android:layout_marginTop="6dp"
                android:textSize="14dp"
                android:text="Ararat Avşaroğlu from İstanbul"
                android:textColor="@color/primary_text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_age"
                android:layout_toRightOf="@+id/person_photo"
                android:layout_below="@+id/person_name"
                android:textColor="@color/secondary_text"
                android:textSize="10dp"
                android:text="24 May"
                />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/title_photo"
            android:src="@drawable/ferrari_v9s"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/historyTitle"
            android:textSize="22dp"
            android:text="A Different Aspect To Ferrari Cars In Europe"
            android:textColor="@color/primary_text"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/historyDetail"
            android:layout_toRightOf="@+id/person_photo"
            android:layout_alignParentTop="true"
            android:textSize="16dp"
            android:textColor="@color/secondary_text"
            android:text="The most expensive car maker, Ferrari, needs no introduction. Ferrari is a name of speed and luxury. Ferrari S.p.A was founded by Enzo Ferrari in 1939; however, the company got recognition as an auto manufacturer in 1947 after."
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/readMore"
            android:textSize="12dp"
            android:textColor="@color/secondary_text"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Read more..."
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="@color/divider"
            android:layout_marginBottom="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/photoContributer1"
                    android:src="@drawable/user4_36"
                    android:layout_marginRight="2dp"
                    />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/photoContributer2"
                    android:src="@drawable/user1_36"
                    android:layout_marginRight="2dp"
                    />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/photoContributer3"
                    android:src="@drawable/user3_36"
                    android:layout_marginRight="2dp"
                    />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/photoContributer4"
                    android:src="@drawable/user6_36"
                    android:layout_marginRight="2dp"
                    />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/photoContributer5"
                    android:src="@drawable/user5_36"
                    android:layout_marginRight="2dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/likeCount"
                    android:textSize="12dp"
                    android:text="391"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/photoLike"
                    android:src="@drawable/like"
                    android:layout_marginRight="8dp"
                    />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>